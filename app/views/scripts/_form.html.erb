<%= form_for script, :html => { :id => "edit_form" } do |f| %>
	<%= f.text_area :v_content, rows: 3, :style => "width:100%" %>
	<div class="pull-left">
		<%= link_to "Related Comments", "#", :class => "show_related_comments btn"%>
	</div>
	<div class="pull-right">
		<%= f.submit "Save", :class => "btn btn-primary"%>
		<%= f.submit "Ignore, Choose another one", :class => "btn btn-success" %>
	</div>
<% end %>